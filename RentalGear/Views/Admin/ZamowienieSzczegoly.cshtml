@model Wypozyczenie
@{
    ViewData["Title"] = $"Zamówienie #{Model.Id}";
    var badgeClass = Model.Status switch
    {
        StatusWypozyczenia.Oczekujace => "bg-warning text-dark",
        StatusWypozyczenia.Potwierdzone => "bg-info",
        StatusWypozyczenia.WTrakcie => "bg-primary",
        StatusWypozyczenia.Zakonczone => "bg-success",
        StatusWypozyczenia.Anulowane => "bg-secondary",
        StatusWypozyczenia.Odrzucone => "bg-danger",
        _ => "bg-secondary"
    };
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb" style="--bs-breadcrumb-divider-color:var(--text-secondary)">
        <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Zamowienia">Zamówienia</a></li>
        <li class="breadcrumb-item active">#@Model.Id</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Zamówienie #@Model.Id</h5>
                <span class="badge @badgeClass fs-6">@Model.Status</span>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h6 class="text-secondary">Klient</h6>
                        <p class="fs-5 mb-1"><i class="bi bi-person me-2"></i>@Model.Uzytkownik?.PelnaNazwa</p>
                        <p class="text-secondary mb-0">@Model.Uzytkownik?.Email</p>
                        @if (!string.IsNullOrEmpty(Model.Uzytkownik?.PhoneNumber))
                        {
                            <p class="text-secondary mb-0"><i class="bi bi-telephone me-1"></i>@Model.Uzytkownik.PhoneNumber</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.Uzytkownik?.Firma))
                        {
                            <p class="text-secondary mb-0"><i class="bi bi-building me-1"></i>@Model.Uzytkownik.Firma</p>
                        }
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-secondary">Termin</h6>
                        <p class="fs-5 mb-0"><i class="bi bi-calendar me-2"></i>@Model.DataOd.ToString("dd.MM.yyyy") - @Model.DataDo.ToString("dd.MM.yyyy")</p>
                        <p class="text-secondary">(@Model.LiczbaDni dni)</p>
                    </div>
                </div>

                <h6>Wypożyczony sprzęt</h6>
                <table class="table">
                    <thead><tr><th>Sprzęt</th><th>Ilość</th><th>Cena/dzień</th><th>Razem</th></tr></thead>
                    <tbody>
                        @foreach (var p in Model.Pozycje)
                        {
                            <tr>
                                <td>@p.Sprzet?.Producent @p.Sprzet?.Nazwa</td>
                                <td>@p.Ilosc</td>
                                <td>@p.CenaDzien.ToString("N0") zł</td>
                                <td>@p.KosztPozycji.ToString("N0") zł</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr><th colspan="3">Razem wypożyczenie</th><th>@Model.KosztCalkowity.ToString("N0") zł</th></tr>
                        <tr><th colspan="3">Kaucja</th><th>@Model.Kaucja.ToString("N0") zł</th></tr>
                    </tfoot>
                </table>

                @if (!string.IsNullOrEmpty(Model.UwagiKlienta))
                {
                    <div class="alert alert-secondary"><strong>Uwagi klienta:</strong><br>@Model.UwagiKlienta</div>
                }
            </div>
            <div class="card-footer d-flex gap-2 flex-wrap">
                <a asp-action="Zamowienia" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Powrót</a>
                @if (Model.Status == StatusWypozyczenia.Oczekujace)
                {
                    <form asp-action="ZmienStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id">
                        <input type="hidden" name="status" value="@StatusWypozyczenia.Potwierdzone">
                        <button type="submit" class="btn btn-success"><i class="bi bi-check me-1"></i>Potwierdź</button>
                    </form>
                    <form asp-action="ZmienStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id">
                        <input type="hidden" name="status" value="@StatusWypozyczenia.Odrzucone">
                        <button type="submit" class="btn btn-danger"><i class="bi bi-x me-1"></i>Odrzuć</button>
                    </form>
                }
                @if (Model.Status == StatusWypozyczenia.Potwierdzone)
                {
                    <form asp-action="ZmienStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id">
                        <input type="hidden" name="status" value="@StatusWypozyczenia.WTrakcie">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-box-seam me-1"></i>Wydaj sprzęt</button>
                    </form>
                }
                @if (Model.Status == StatusWypozyczenia.WTrakcie)
                {
                    <form asp-action="ZmienStatus" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@Model.Id">
                        <input type="hidden" name="status" value="@StatusWypozyczenia.Zakonczone">
                        <button type="submit" class="btn btn-success"><i class="bi bi-check-circle me-1"></i>Zakończ</button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>