@model Kategoria
@{ ViewData["Title"] = "Edytuj kategoriÄ™"; }

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb" style="--bs-breadcrumb-divider-color:var(--text-secondary)">
        <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-action="Kategorie">Kategorie</a></li>
        <li class="breadcrumb-item active">Edytuj</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header" style="background:var(--accent-orange);color:#000">
                <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Edytuj: @Model.Nazwa</h5>
            </div>
            <div class="card-body">
                <form asp-action="EdytujKategorie" method="post">
                    <input type="hidden" asp-for="Id">
                    <div class="mb-3">
                        <label asp-for="Nazwa" class="form-label"></label>
                        <input asp-for="Nazwa" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label asp-for="Ikona" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi @Model.Ikona"></i></span>
                            <input asp-for="Ikona" class="form-control">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Opis" class="form-label"></label>
                        <textarea asp-for="Opis" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Kolejnosc" class="form-label"></label>
                        <input asp-for="Kolejnosc" type="number" min="1" class="form-control">
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Aktywna" class="form-check-input">
                            <label asp-for="Aktywna" class="form-check-label"></label>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning"><i class="bi bi-save me-2"></i>Zapisz</button>
                        <a asp-action="Kategorie" class="btn btn-outline-secondary">Anuluj</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>