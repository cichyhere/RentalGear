@model List<Kategoria>
@{ ViewData["Title"] = "Zarządzanie kategoriami"; }

<div class="page-header d-flex justify-content-between align-items-center">
    <h1 class="page-title"><i class="bi bi-tags me-2"></i>Kategorie</h1>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary me-2"><i class="bi bi-arrow-left me-1"></i>Dashboard</a>
        <a asp-action="DodajKategorie" class="btn btn-primary"><i class="bi bi-plus-circle me-1"></i>Dodaj kategorię</a>
    </div>
</div>

<div class="card">
    <div class="table-responsive">
        <table class="table mb-0">
            <thead><tr><th>Ikona</th><th>Nazwa</th><th>Opis</th><th>Kolejność</th><th>Status</th><th>Sprzętów</th><th>Akcje</th></tr></thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr class="@(!k.Aktywna ? "opacity-50" : "")">
                        <td><i class="bi @k.Ikona fs-4"></i></td>
                        <td><strong>@k.Nazwa</strong></td>
                        <td class="text-secondary">@(k.Opis ?? "-")</td>
                        <td>@k.Kolejnosc</td>
                        <td>
                            @if (k.Aktywna) { <span class="badge bg-success">Aktywna</span> }
                            else { <span class="badge bg-secondary">Nieaktywna</span> }
                        </td>
                        <td>@k.Sprzety?.Count</td>
                        <td>
                            <a asp-action="EdytujKategorie" asp-route-id="@k.Id" class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>