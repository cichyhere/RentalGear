@model OrderVM
@{ ViewData["Title"] = "Zamówienie"; }

<div class="page-header">
    <h1 class="page-title"><i class="bi bi-send me-2"></i>Złóż zamówienie</h1>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">Termin wypożyczenia</div>
            <div class="card-body">
                <form asp-action="Zamowienie" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="DataOd" class="form-label"></label>
                            <input asp-for="DataOd" type="date" class="form-control" id="dataOd" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                            <span asp-validation-for="DataOd" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="DataDo" class="form-label"></label>
                            <input asp-for="DataDo" type="date" class="form-control" id="dataDo" min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")">
                            <span asp-validation-for="DataDo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Uwagi" class="form-label"></label>
                        <textarea asp-for="Uwagi" class="form-control" rows="2"></textarea>
                    </div>

                    <h6>Sprzęt</h6>
                    <table class="table table-sm">
                        <thead><tr><th>Nazwa</th><th>Cena/dzień</th><th>Ilość</th></tr></thead>
                        <tbody>
                            @foreach (var item in Model.Koszyk)
                            {
                                <tr><td>@item.Nazwa</td><td>@item.CenaDzien zł</td><td>@item.Ilosc</td></tr>
                            }
                        </tbody>
                    </table>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success btn-lg"><i class="bi bi-send me-2"></i>Złóż zamówienie</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">Wróć</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">Podsumowanie</div>
            <div class="card-body">
                <div id="podsumowanie">
                    <p class="text-secondary">Wybierz daty</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    const dataOd = document.getElementById('dataOd');
    const dataDo = document.getElementById('dataDo');
    const pods = document.getElementById('podsumowanie');
    
    function oblicz() {
        if (dataOd.value && dataDo.value) {
            fetch('/Koszyk/ObliczKoszt?dataOd=' + dataOd.value + '&dataDo=' + dataDo.value)
                .then(r => r.json())
                .then(d => {
                    pods.innerHTML = '<div class="d-flex justify-content-between mb-2"><span>Dni:</span><strong>' + d.dni + '</strong></div>' +
                        '<div class="d-flex justify-content-between mb-2"><span>Koszt:</span><strong>' + d.koszt.toFixed(2) + ' zł</strong></div>' +
                        '<div class="d-flex justify-content-between mb-2"><span>Kaucja:</span><strong>' + d.kaucja.toFixed(2) + ' zł</strong></div>' +
                        '<hr><div class="d-flex justify-content-between"><span class="fs-5">Razem:</span><strong class="fs-5 text-success">' + d.razem.toFixed(2) + ' zł</strong></div>';
                });
        }
    }
    dataOd.addEventListener('change', oblicz);
    dataDo.addEventListener('change', oblicz);
    oblicz();
});
</script>
}