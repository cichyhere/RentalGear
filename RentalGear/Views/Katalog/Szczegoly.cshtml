@model Sprzet
@{
    ViewData["Title"] = Model.Nazwa;
    var podobne = ViewBag.Podobne as List<Sprzet> ?? new();
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb" style="--bs-breadcrumb-divider-color:var(--text-secondary);--bs-breadcrumb-item-active-color:var(--text-primary)">
        <li class="breadcrumb-item"><a asp-action="Index">Katalog</a></li>
        <li class="breadcrumb-item"><a asp-action="Kategoria" asp-route-id="@Model.KategoriaId">@Model.Kategoria?.Nazwa</a></li>
        <li class="breadcrumb-item active">@Model.Nazwa</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-6 mb-4">
        @if (!string.IsNullOrEmpty(Model.ZdjecieUrl))
        {
            <img src="@Model.ZdjecieUrl" class="img-fluid rounded" alt="@Model.Nazwa" style="max-height:400px;width:100%;object-fit:cover">
        }
        else
        {
            <div class="card d-flex align-items-center justify-content-center" style="height:400px">
                <i class="bi bi-camera" style="font-size:6rem;color:var(--text-secondary)"></i>
            </div>
        }
    </div>
    <div class="col-lg-6">
        <span class="badge bg-primary mb-2">@Model.Kategoria?.Nazwa</span>
        @if (Model.Nowosc) { <span class="badge bg-danger mb-2">Nowość</span> }
        <h1>@Model.Producent @Model.Nazwa</h1>
        @if (!string.IsNullOrEmpty(Model.Model)) { <p class="text-secondary">Model: @Model.Model</p> }

        <div class="card mb-4">
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-4">
                        <h3 class="text-success mb-0">@Model.CenaDzien zł</h3>
                        <small class="text-secondary">za dzień</small>
                    </div>
                    <div class="col-4">
                        <h3 class="mb-0">@(Model.Kaucja?.ToString("0") ?? "-") zł</h3>
                        <small class="text-secondary">kaucja</small>
                    </div>
                    <div class="col-4">
                        <h3 class="mb-0">@Model.IloscDostepna</h3>
                        <small class="text-secondary">dostępnych</small>
                    </div>
                </div>
            </div>
        </div>

        @if (User.Identity!.IsAuthenticated && Model.IloscDostepna > 0)
        {
            <form asp-controller="Koszyk" asp-action="Dodaj" method="post" class="mb-4">
                <input type="hidden" name="id" value="@Model.Id">
                <div class="row g-2">
                    <div class="col-auto">
                        <input type="number" name="ilosc" value="1" min="1" max="@Model.IloscDostepna" class="form-control" style="width:80px">
                    </div>
                    <div class="col">
                        <button type="submit" class="btn btn-primary btn-lg w-100"><i class="bi bi-cart-plus me-2"></i>Dodaj do koszyka</button>
                    </div>
                </div>
            </form>
        }
        else if (!User.Identity.IsAuthenticated)
        {
            <div class="alert alert-info"><a asp-controller="Konto" asp-action="Logowanie">Zaloguj się</a> aby wypożyczyć</div>
        }

        @if (!string.IsNullOrEmpty(Model.Opis))
        {
            <h5>Opis</h5>
            <p>@Model.Opis</p>
        }

        <a asp-action="Kalendarz" asp-route-id="@Model.Id" class="btn btn-outline-secondary"><i class="bi bi-calendar3 me-2"></i>Sprawdź dostępność</a>
    </div>
</div>

@if (podobne.Any())
{
    <hr class="my-5 border-secondary">
    <h4>Podobny sprzęt</h4>
    <div class="row g-4">
        @foreach (var s in podobne)
        {
            <div class="col-md-3">
                <div class="product-card">
                    <div class="product-image">
                        @if (!string.IsNullOrEmpty(s.ZdjecieUrl)) { <img src="@s.ZdjecieUrl"> }
                    </div>
                    <div class="product-body">
                        <div class="product-brand">@s.Producent</div>
                        <div class="product-name">@s.Nazwa</div>
                        <div class="product-price">@s.CenaDzien zł/dzień</div>
                    </div>
                    <div class="product-footer">
                        <a asp-action="Szczegoly" asp-route-id="@s.Id" class="btn btn-outline-primary btn-sm w-100">Zobacz</a>
                    </div>
                </div>
            </div>
        }
    </div>
}