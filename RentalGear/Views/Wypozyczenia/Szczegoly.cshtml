@model Wypozyczenie
@{
    ViewData["Title"] = $"Zamówienie #{Model.Id}";
    var badgeClass = Model.Status switch
    {
        StatusWypozyczenia.Oczekujace => "bg-warning text-dark",
        StatusWypozyczenia.Potwierdzone => "bg-info",
        StatusWypozyczenia.WTrakcie => "bg-primary",
        StatusWypozyczenia.Zakonczone => "bg-success",
        StatusWypozyczenia.Anulowane => "bg-secondary",
        StatusWypozyczenia.Odrzucone => "bg-danger",
        _ => "bg-secondary"
    };
    var statusText = Model.Status switch
    {
        StatusWypozyczenia.Oczekujace => "Oczekujące",
        StatusWypozyczenia.Potwierdzone => "Potwierdzone",
        StatusWypozyczenia.WTrakcie => "W trakcie",
        StatusWypozyczenia.Zakonczone => "Zakończone",
        StatusWypozyczenia.Anulowane => "Anulowane",
        StatusWypozyczenia.Odrzucone => "Odrzucone",
        _ => "?"
    };
}

<nav aria-label="breadcrumb" class="mb-4">
    <ol class="breadcrumb" style="--bs-breadcrumb-divider-color:var(--text-secondary)">
        <li class="breadcrumb-item"><a asp-action="Index">Moje wypożyczenia</a></li>
        <li class="breadcrumb-item active">#@Model.Id</li>
    </ol>
</nav>

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Zamówienie #@Model.Id</h4>
        <span class="badge @badgeClass fs-6">@statusText</span>
    </div>
    <div class="card-body">
        <div class="row mb-4">
            <div class="col-md-6">
                <h6 class="text-secondary">Termin</h6>
                <p class="fs-5"><i class="bi bi-calendar me-2"></i>@Model.DataOd.ToString("dd.MM.yyyy") - @Model.DataDo.ToString("dd.MM.yyyy")</p>
                <small class="text-secondary">(@Model.LiczbaDni dni)</small>
            </div>
            <div class="col-md-6">
                <h6 class="text-secondary">Utworzono</h6>
                <p>@Model.DataUtworzenia.ToString("dd.MM.yyyy HH:mm")</p>
            </div>
        </div>

        <h5>Wypożyczony sprzęt</h5>
        <div class="table-responsive">
            <table class="table">
                <thead><tr><th>Sprzęt</th><th>Cena/dzień</th><th>Ilość</th><th>Razem</th></tr></thead>
                <tbody>
                    @foreach (var p in Model.Pozycje)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    @if (!string.IsNullOrEmpty(p.Sprzet?.ZdjecieUrl))
                                    {
                                        <img src="@p.Sprzet.ZdjecieUrl" style="width:50px;height:35px;object-fit:cover;border-radius:4px">
                                    }
                                    <span>@p.Sprzet?.Producent @p.Sprzet?.Nazwa</span>
                                </div>
                            </td>
                            <td>@p.CenaDzien.ToString("N0") zł</td>
                            <td>@p.Ilosc</td>
                            <td>@p.KosztPozycji.ToString("N0") zł</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr><th colspan="3">Koszt wypożyczenia</th><th>@Model.KosztCalkowity.ToString("N0") zł</th></tr>
                    <tr><th colspan="3">Kaucja</th><th>@Model.Kaucja.ToString("N0") zł</th></tr>
                    <tr class="table-success"><th colspan="3">Razem do zapłaty</th><th>@((Model.KosztCalkowity + Model.Kaucja).ToString("N0")) zł</th></tr>
                </tfoot>
            </table>
        </div>

        @if (!string.IsNullOrEmpty(Model.UwagiKlienta))
        {
            <div class="alert alert-secondary"><strong>Twoje uwagi:</strong><br>@Model.UwagiKlienta</div>
        }
        @if (!string.IsNullOrEmpty(Model.UwagiPracownika))
        {
            <div class="alert alert-info"><strong>Uwagi od RentalGear:</strong><br>@Model.UwagiPracownika</div>
        }
    </div>
    <div class="card-footer d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Powrót</a>
        @if (Model.Status == StatusWypozyczenia.Oczekujace)
        {
            <form asp-action="Anuluj" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Anulować zamówienie?')">
                <button type="submit" class="btn btn-danger"><i class="bi bi-x-circle me-1"></i>Anuluj zamówienie</button>
            </form>
        }
    </div>
</div>